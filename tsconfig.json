{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"],
  "compilerOptions": {
    /* Base Options: */
    "target": "ES2022",
    "rootDir": "./src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Strictness */
    "strict": true,
    "checkJs": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,

    /* Bundled projects */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
